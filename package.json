{
  "name": "@force-dev/react-web",
  "version": "0.0.3",
  "description": "React web components library",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "files": [
    "lib/",
    "src/",
    "README.md"
  ],
  "sideEffects": false,
  "license": "MIT",
  "engines": {
    "npm": ">=8.5.0",
    "yarn": ">=1.22.18",
    "node": ">=16.14.2"
  },
  "homepage": "https://github.com/epifanovmd/react-web",
  "author": {
    "name": "Epifanov Andrei",
    "email": "epifanovmd@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/epifanovmd/react-web.git"
  },
  "scripts": {
    "reinstall": "rm -rf node_modules/ && npm i && npx --yes npm-install-peers",
    "VERSION:PATCH": "npm version patch",
    "VERSION:MINOR": "npm version minor",
    "VERSION:MAJOR": "npm version major",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepare": "npm run build",
    "lint": "eslint \"src/**/*{.ts,.tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*{.ts,.tsx}\"",
    "prettier:fix": "prettier --parser typescript --write src/**/*.{ts,tsx}",
    "check-packages-updates": "yarn outdated"
  },
  "dependencies": {
    "@force-dev/react": "^1.1.19",
    "@force-dev/utils": "^1.1.77",
    "@types/body-scroll-lock": "^3.1.2",
    "body-scroll-lock": "^4.0.0-beta.0",
    "postcss": "^8.4.41",
    "rc-select": "^14.15.1",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.77.8"
  },
  "peerDependencies": {
    "lodash": "^4.17.21",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.1.0",
    "@types/lodash": "^4.14.190",
    "@types/react": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "babel-loader": "^9.1.0",
    "eslint": "8.22.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^4.3.7",
    "lint-staged": "^13.0.3",
    "prettier": "^2.8.0",
    "rollup": "^2.79.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "terser": "^5.16.0",
    "thread-loader": "^3.0.4",
    "typescript": "^4.9.3",
    "typescript-eslint-parser": "^22.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix \"src/**/*{.ts,.tsx}\"",
      "prettier --parser typescript --write src/**/*.{ts,tsx}",
      "git add"
    ]
  }
}
